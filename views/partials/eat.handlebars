<!-- eat chart -->
<div class="container">
    <h3 id="eatGoal"></h3>
    <label for="logDate">Log date:</label>
    <input type="date" id="logDate" name="trip-start">
    <form>
        <div class="form-row">
            <div class="col">
                <input type="number" name="eatValue" id="eatValue" class="form-control" placeholder="1-5 Health Rating">
                <button class="btn btn-info" id="eatBtn">Log Food Rating</button>
            </div>
        </div>
    </form>
    <h3 id="eatProgress"></h3>
    <canvas id="eatChart"></canvas>
</div>

